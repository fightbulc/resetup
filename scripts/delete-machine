#!/usr/bin/env bash

# VARS
BASE_PATH=$(dirname $(dirname $(readlink -f $0)))

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check arguments
if [ $# -lt 1 ]; then
    echo -e "${RED}‚ùå Error: delete-machine requires machine name${NC}"
    echo ""
    echo "Usage: resetup delete-machine <machine>"
    echo ""
    echo "Examples:"
    echo "  resetup delete-machine laptop    # Delete laptop machine configuration"
    echo "  resetup delete-machine old-dev   # Delete old-dev machine configuration"
    echo ""
    echo "Available machines:"
    "$BASE_PATH/scripts/list-machines"
    exit 1
fi

MACHINE="$1"

echo -e "${BLUE}üóëÔ∏è  Deleting machine '$MACHINE'...${NC}"
echo ""

# Set up paths
MACHINE_DIR="$BASE_PATH/machines/$MACHINE"
ENCRYPTED_FILE="$BASE_PATH/machines/$MACHINE.aes256"

# Check if machine exists
if [ ! -d "$MACHINE_DIR" ] && [ ! -f "$ENCRYPTED_FILE" ]; then
    echo -e "${RED}‚ùå Machine '$MACHINE' not found${NC}"
    echo ""
    echo "Available machines:"
    "$BASE_PATH/scripts/list-machines"
    exit 1
fi

# Show what will be deleted
echo -e "${YELLOW}‚ö†Ô∏è  This will permanently delete:${NC}"
if [ -d "$MACHINE_DIR" ]; then
    echo "  üìÅ Configuration directory: $MACHINE_DIR"
fi
if [ -f "$ENCRYPTED_FILE" ]; then
    echo "  üîê Encrypted file: machines/$MACHINE.aes256"
fi
echo ""

# Confirm deletion
read -p "Are you sure you want to delete machine '$MACHINE'? [y/N] " -n 1 -r
echo

if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    echo "Deletion cancelled."
    exit 0
fi

# Perform deletion
echo -e "${YELLOW}Deleting machine configuration...${NC}"

if [ -d "$MACHINE_DIR" ]; then
    rm -rf "$MACHINE_DIR"
    echo "  ‚úì Removed configuration directory"
fi

if [ -f "$ENCRYPTED_FILE" ]; then
    rm -f "$ENCRYPTED_FILE"
    echo "  ‚úì Removed encrypted file"
fi


echo ""
echo -e "${GREEN}‚úÖ Machine '$MACHINE' deleted successfully!${NC}"
echo ""
echo -e "${BLUE}üí° To create a new machine with the same name:${NC}"
echo "  resetup init $MACHINE"
echo ""