FROM ubuntu:25.04

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install basic packages needed for resetup
RUN apt-get update && apt-get install -y \
    sudo \
    git \
    curl \
    wget \
    bash \
    openssl \
    python3 \
    python3-pip \
    yq \
    && rm -rf /var/lib/apt/lists/*

# Create a user for testing (non-root)
RUN useradd -m -s /bin/bash testuser && \
    echo 'testuser ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

# Switch to test user
USER testuser
WORKDIR /home/testuser

# Set up git config (required for some recipes)
RUN git config --global user.name "Test User" && \
    git config --global user.email "test@example.com"

# Clone the resetup repository
RUN git clone https://github.com/fightbulc/resetup.git

WORKDIR /home/testuser/resetup

# Make sure we're on the latest version
RUN git pull

CMD ["/bin/bash"]